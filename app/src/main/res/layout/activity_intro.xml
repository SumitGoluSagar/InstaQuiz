<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_intro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.mistu.android.exam.activity.IntroActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/activity_intro_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.5"
        android:background="@color/card_bg2"
        android:layout_above="@+id/activity_intro_next"
        />

    <TextView
        android:id="@+id/activity_intro_skip"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="SKIP"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        />

    <TextView
        android:id="@+id/activity_intro_next"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="NEXT"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        />

    <LinearLayout
        android:id="@+id/activity_intro_dots_container"
        android:layout_above="@+id/separator"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="0dp"
        android:orientation="horizontal"
        android:layout_marginBottom="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    </LinearLayout>

</RelativeLayout>
