<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="#f8f8f8"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/feed_home_image_type_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/classroom"
            android:adjustViewBounds="true"
            android:visibility="visible"
            />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/feed_home_image_type_title_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="16sp"
                android:text="@string/app_name"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/feed_home_image_type_format_tv"
                android:layout_width="wrap_content"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="@string/app_name"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:gravity="top"
                android:visibility="invisible"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/feed_home_image_type_text_tv"
            android:layout_width="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:text="Some random text will go here. "
            android:textColor="@color/black"
            android:gravity="top"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>
